
<h1>Restaurants</h1>

<% if owner_signed_in? %>
<%= link_to 'Add Restaurant', new_rest_path, class: "btn " %>
<% end %>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

  <% @rests.each do |rest| %>
  <tr>
    <td><%= rest.name %></td>
    <td><%= rest.description %></td>
    <td><%= link_to 'Show', rest %></td>
  </tr>
  <% end %>


</table>